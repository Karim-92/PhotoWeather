<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PhotoWeatherApp" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_bg</item>
    </style>

    <style name="PhotoWeatherPrimaryTextStyle">
        <item name="android:background">@color/text_bg</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PhotoWeatherSecondaryTextStyle">
        <item name="android:background">@color/text_bg</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="backgroundColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">20%</item>
    </style>

</resources>